<div class="box wide">
  <div class="legend">
    <%= tr('Set New Password') %>
  </div>

  <%= form_tag set_new_password_path, { :autocomplete => "off" } do %>
    <%= error_messages_for(@reset_user) %>

    <%= hidden_field_tag "token", params[:token] %>

    <p>
    <%= label_tag :username, tr('Username:') %>
    <%= @reset_user.username %>
    <br />

    <%= label_tag :password, tr('New Password:') %>
    <%= password_field_tag :password, "", :size => 30 %>
    <br />

    <%= label_tag :password_confirmation, tr('(Again):') %>
    <%= password_field_tag :password_confirmation, "", :size => 30 %>
    <br />

    <p>
    <%= submit_tag trl('Set New Password') %>
    </p>
  <% end %>
</div>
